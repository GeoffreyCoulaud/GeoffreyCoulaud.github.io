@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap');

big-shadow = 0px 0px 2em rgba(0,0,0,0.25)

body
	margin: 0px
	font-family: 'Roboto', sans-serif
	background-color: #39529e
	font-weight: 400
	color: #ffffff

h1,
h2,
strong
	font-weight: 500

h2
	font-size: 2em
	margin-bottom: 2rem

#navigation
	position: fixed
	bottom: 0px
	left: 0px
	width: 100%

	a
		display: inline-block
		margin: 1em
		color: inherit


#landing
	min-height: 100vh
	display: flex
	justify-content: space-around
	align-items: center
	box-sizing: border-box
	padding: 0px 10%

	h1, h2
		margin: 0px

	h1
		font-size: 4em
		margin-bottom: 0.25em

	h2
		font-weight: 400
		font-size: 3.5em

	img
		width: 20em

#description
	min-height: 50vh
	padding: 0px 10%
	margin-right: auto
	display: flex
	justify-content: space-around
	align-items: flex-start

	article:nth-child(2)
		margin-top: 5em
	article:nth-child(3)
		margin-top: 10em

	article
		width: calc(33% - 2em)
		border-radius: 2em
		padding: 2em
		color: black
		box-sizing: border-box
		background-color: white
		box-shadow: big-shadow

		h2
			text-align: center
			margin-top: 0px

		img
			display: block
			margin: 1em auto 0px auto
			width: 30%

#realisations
	margin: 20em 0px 10em 0px

	h2
		text-align: center
		margin-bottom: 5rem

	div
		display: grid
		grid-template-columns: 1fr 20em 20em 1fr
		grid-template-rows: 1fr
		grid-template-areas: \
			". case1 case2 ."
		gap: 2em

		a:nth-child(1)
			grid-area: case1
		a:nth-child(2)
			grid-area: case2

		a:nth-child(even)
			transform: translateY(3em)

		a
			display: flex
			align-items: center
			justify-content: center
			box-sizing: border-box
			width: 20em	
			height: 20em
			padding: 2em
			background-color: white
			border-radius: 2em
			box-shadow: big-shadow

			img
				display: block
				width: 100%

#contact
	min-height: 100vh
	display: flex
	flex-direction: column
	align-items: center
	justify-content: center
	text-align: center
	font-size: 2em

	h2
		margin-bottom: 0.5em

	a
		color: inherit