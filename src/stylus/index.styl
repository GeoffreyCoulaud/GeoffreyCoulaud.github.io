@import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Zen+Kaku+Gothic+Antique&display=swap');

body
	font-family: "Zen Kaku Gothic Antique", Arial, Helvetica, sans-serif;
	background-color: #3a73cc;
	color: white;
	margin: 0px;

h1, h2, strong
	font-family: "Bebas Neue", sans-serif;

#wrapper
	scroll-behavior: smooth;
	perspective: 100px;
	overflow-x: hidden;
	overflow-y: auto;
	height: 100vh;
	width: 100%;

#landing
	transform-style: preserve-3d;
	justify-content: center;
	align-items: center;
	position: relative;
	display: flex;
	height: 50rem;
	margin-bottom: 20rem;

	h1
		transform: translate(-50%, -50%) translateZ(-20px) scale(1.2);
		text-transform: uppercase;
		text-align: center;
		position: absolute;
		line-height: 1.5em;
		font-size: 10rem;
		margin: 0px;
		left: 50%;
		top: 50%;
	
	img
		filter: drop-shadow(0px 0px 1rem rgba(0,0,0,0.2));
		position: relative;
		width: 20rem;

#main
	grid-template-columns: repeat(3, 4.6rem) 1fr;
	grid-template-rows: repeat(3, max-content);
	grid-template-areas:\
		"t1 .  .  content1"\
		"t1 t2 .  content2"\
		"t1 t2 t3 content3";
	box-sizing: border-box;
	padding-left: 2rem;
	column-gap: 2rem;
	row-gap: 4rem;
	display: grid;
	width: 100%;

	&>*
		width: 100%;

	for i in (1..3)
		.content:nth-of-type({i})
			grid-area: "content%s" % i;

		.title-wrapper:nth-of-type({i})
			grid-area: "t%s" % i;

	.content

		h3
			font-family: "Abril Fatface", 'Times New Roman', Times, serif;
			font-size: 2em;
			margin: 0px 0px 1rem 0px;
			font-weight: 400;
		
		p
			max-width: 50em;
			font-size: 1.2em;
			margin: 1rem 0px;

	.title-wrapper
		position: relative;
		min-height: 50rem;

		h2
			writing-mode: vertical-lr;
			transform: scale(-1);
			text-align: right;
			position: sticky;
			font-size: 5rem;
			margin: 0px;
			top: 3rem;

