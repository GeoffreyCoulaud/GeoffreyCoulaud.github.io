@import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');

body
	font-family: "Roboto", Arial, Helvetica, sans-serif;
	background-color: #3a73cc;
	color: white;
	margin: 0px;

h1, h2, strong
	font-family: "Bebas Neue", sans-serif;

#wrapper
	scroll-behavior: smooth;
	perspective: 100px;
	overflow-x: hidden;
	overflow-y: auto;
	height: 100vh;
	width: 100%;

#landing
	transform-style: preserve-3d;
	justify-content: center;
	align-items: center;
	position: relative;
	display: flex;
	height: 50rem;
	margin-bottom: 20rem;

	h1
		transform: translate(-50%, -50%) translateZ(-20px) scale(1.2);
		text-transform: uppercase;
		text-align: center;
		position: absolute;
		line-height: 1.5em;
		font-size: 10rem;
		margin: 0px;
		left: 50%;
		top: 50%;
	
	img
		filter: drop-shadow(0px 0px 1rem rgba(0,0,0,0.2));
		position: relative;
		width: 20rem;

#main
	display: grid;
	grid-template-columns: auto 1fr;
	grid-template-rows: 1fr;

	&>*
		width: 100%;

	.content

		&>*
			border: 1px solid rgba(0,0,0,0.2);
			min-height: 50rem;

	.titles
		display: flex;
		font-size: 4rem;
		padding-left: 0.5em;

		.wrapper
			position: relative;
			min-height: 50rem;

			h2
				writing-mode: vertical-lr;
				transform: scale(-1);
				width: max-content;
				text-align: right;
				position: sticky;
				margin: 0px;
				top: 0.5em;


		for i in (0..3)
			.wrapper:nth-child({i+1})
				margin-top: i * 50rem


